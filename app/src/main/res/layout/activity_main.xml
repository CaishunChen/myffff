<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView android:id="@+id/test" android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="IP Address"
        android:id="@+id/IP_Address_Label" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/IP_Address" />

    <Button android:id="@+id/Demo" android:text="@string/Demo24000" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/Demo20025" android:text="@string/Demo20025" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button android:id="@+id/Sensor" android:text="@string/Sensor" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
